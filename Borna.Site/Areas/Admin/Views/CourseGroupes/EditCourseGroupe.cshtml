@model Borna.Domain.Entities.Course.CourseGroupe

@{
    ViewData["Title"] = "EditCourseGroupe";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="widget-inner">
    <form class="edit-profile m-b30" asp-action="EditCourseGroupe" method="post">
        <input class="form-control" type="hidden" asp-for="ParentID">
        <input class="form-control" type="hidden" asp-for="GroupeID">
        <div class="row">
            <div class="col-12">
                <div class="ml-auto">
                    <h3> اطلاعات </h3>
                </div>
            </div>
            <div class="form-group col-6">
                <label class="col-form-label">نام گروه</label>
                <div>
                    <input class="form-control" type="text" asp-for="GroupeTitle">
                </div>
                <span style="color:purple" asp-validation-for="GroupeTitle"></span>
            </div>



            <div class="seperator"></div>




            <div class="col-12">

                <button type="submit" style="background-color:chartreuse;border:thin" class="btn">ذخیره تغییرات</button>
            </div>
        </div>
    </form>
</div>


