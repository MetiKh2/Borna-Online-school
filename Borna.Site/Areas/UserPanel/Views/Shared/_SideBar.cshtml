
@using Borna.Application.Interfaces
@using Borna.Application.DTOs.UserViewModels
@inject IUserService _userService
 @{ 
     UserPanelSideBarViewModel viewModel = _userService.GetSideBarData(User.Identity.Name);
 }

<div class="profile-bx text-center">
    <div class="user-profile-thumb">
        <img src="~/UserAvatars/@viewModel.ImageName" alt="" />
    </div>
    <div class="profile-info">
        <h4>@viewModel.UserName</h4>
        <span>@viewModel.Email</span>
    </div>
    <div class="profile-social">
        <ul class="list-inline m-a0">
            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
        </ul>
    </div>
    <div class="profile-tabnav">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a href="/MyCourses"><i class="ti-book"></i>‌دوره های من </a>
                <a href="/EditProfile"><i class="ti-pencil"></i>‌ویرایش حساب</a>
                <a href="/EditPassword"><i class="ti-eye"></i>‌ویرایش رمز عبور</a>
            </li>
         
        </ul>
    </div>
</div>