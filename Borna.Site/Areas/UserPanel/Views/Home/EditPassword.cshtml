
@{
    ViewData["Title"] = "EditPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-content bg-white">
    <!-- inner page banner -->
    <div class="page-banner ovbl-dark" style="background-image:@Url.Content("banner1.jpg");">
        <div class="container">
            <div class="page-banner-entry">
                <h1 class="text-white">پروفایل</h1>
            </div>
        </div>
    </div>
    <!-- Breadcrumb row -->
    <div class="breadcrumb-row">
        <div class="container">
            <ul class="list-inline">
                <li><a href="/">خانه</a></li>
                <li>پروفایل</li>
            </ul>
        </div>
    </div>
    <!-- Breadcrumb row END -->
    <!-- inner page banner END -->
    <div class="content-block">
        <!-- About Us -->
        <div class="section-area section-sp1">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-12 m-b30">
                        <partial name="_SideBar">
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-12 m-b30">
                        <div class="tab-pane" id="change-password">
                            <div class="profile-head">
                                <h3>تغییر رمز عبور</h3>
                            </div>
                            <form class="edit-profile" asp-action="EditPassword" method="post">
                                <div class="">
                                    <div class="form-group row">
                                        <div class="col-12 col-sm-8 col-md-8 col-lg-9 ml-auto">
                                            <h3>نام و نام خانوادگی </h3>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-12 col-sm-4 col-md-4 col-lg-3 col-form-label">رمز عبور فعلی </label>
                                        <div class="col-12 col-sm-8 col-md-8 col-lg-7">
                                            <input name="currentPassword" class="form-control" type="password" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-12 col-sm-4 col-md-4 col-lg-3 col-form-label">رمز عبور جدید </label>
                                        <div class="col-12 col-sm-8 col-md-8 col-lg-7">
                                            <input name="newPassword" class="form-control" type="password" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-12 col-sm-4 col-md-4 col-lg-3 col-form-label">تکرار رمز عبور جدید </label>
                                        <div class="col-12 col-sm-8 col-md-8 col-lg-7">
                                            <input name="reNewPassword" class="form-control" type="password" required>
                                        </div>
                                    </div>
                                    @if (ViewBag.PasswordRePassword == true)
                                    {
                                        <p class="text-danger">رمز عبور و تکرار آن برابر نیستند</p>

                                    }
                                    @if (ViewBag.WrongPassword == true)
                                    {
                                        <p class="text-danger">رمز عبور فعلی اشتباه است</p>
                                    }
                                    @if (ViewBag.IsSeccess == true)
                                    {
                                        <p class="text-success">به دلیل امنیتی به صفحه لاگین هدایت می شوید</p>
                                        <script>
                                            setTimeout(function () {
                                                window.location.href = "/login";
                                            }, 2500);
                                        </script>
                                    }

                                </div>
                                <div class="row">
                                    <div class="col-12 col-sm-4 col-md-4 col-lg-3">
                                    </div>
                                    <div class="col-12 col-sm-8 col-md-8 col-lg-7">
                                        <button type="submit" class="btn">ذخیره تغییرات</button>
                                        <button type="reset" class="btn-secondry">انصراف</button>
                                    </div>
                                </div>

                            </form>
                        </div>

                    </div>
                    <!--Content-->
                </div>
            </div>
        </div>
    </div>
    <!-- contact area END -->
</div>
<!-- Content END-->
